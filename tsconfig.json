{
	"compilerOptions": {
		"target":                           "ES6",
		"module":                           "CommonJS",
		"rootDir":                          "./src",
		"outDir":                           "./dist",
		"esModuleInterop":                  true,
		"forceConsistentCasingInFileNames": true,
		"strict":                           true,
		"skipLibCheck":                     true,
		"declaration":                      true,
		"jsx":                              "react-jsx",
		"types": [
			"node",
			"jest",
			"@testing-library/jest-dom"
		]
	},
	"exclude":         [
		"dist",
		"src/setupTests.ts",
		"**/*.test.ts*",
		"node_modules",
		"jest.config.ts"
	]
}